@model IEnumerable<gabriel_almeida.Models.NotaDeVenda>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idDePagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idDoCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idDeTransportadora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idTipoDePagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idDoItem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idDePagamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idDoCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idDeTransportadora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idTipoDePagamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idDoItem)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.cod">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.cod">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.cod">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
